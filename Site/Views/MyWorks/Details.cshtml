@using Site.Models
@model _Data.Models.Product
@{
    ViewBag.Title = "Details";

    var imgName = "/Content/AppUpload/Product/" + Model.Id + ".jpg";
}

<h2>Details</h2>



<div class="row">
    <div class="col">
        <img class="img-fluid" src="@imgName" alt="@Model.Name"/>

        @if (Model.DummyId != null)
        {
            <div>
                @Html.ActionLink("Я бы сделала немного по другому...", "Index", "Dummy", new {id = Model.DummyId}, null)
            </div>
        }
    </div>
    <div class="col">
        <h2>@Model.Name</h2>
        @Model.Description
    </div>
</div>