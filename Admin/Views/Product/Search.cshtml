@model Admin.Models.SearchModel
@{
    Layout = null;
}

@using (Ajax.BeginForm("Search", "Product", null, new AjaxOptions { UpdateTargetId = "action-body" }, new { @class = "d-inline-flex" }))
{
    @Html.AntiForgeryToken()
    <div class="pr-1">
        @Html.TextBoxFor(m => m.Text, new { @class = "form-control form-control-sm", placeholder = "Искать..." })
    </div>
    <div>
        <button type="submit" class="btn btn-outline-secondary btn-sm">Найти</button>
    </div>
}