@model Admin.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutEmptyCenter.cshtml";
    ViewBag.Title = "Регистрация";
}

<div class="mx-4" style="width: 900px;">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-4">@ViewBag.Title</h2>
        </div>

        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {@class = "w-100"}))
        {
            <div class="col-12">
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Name, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.LastName, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Patronymic, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Patronymic, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="col-6">

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Email, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Password, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col col-form-label" })
                            <div class="col-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.AgreeToReceiveEmailMessages)
                                    @Html.LabelFor(m => m.AgreeToReceiveEmailMessages)
                                </div>
                            </div>
                            <div>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.AgreeToReceiveSmsMessages)
                                    @Html.LabelFor(m => m.AgreeToReceiveSmsMessages)
                                </div>
                            </div>
                            <div>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.AgreeToTheProcessingOfPersonalData)
                                    @Html.LabelFor(m => m.AgreeToTheProcessingOfPersonalData)
                                </div>
                            </div>
                            <div>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.AgreeWithTheRules)
                                    @Html.LabelFor(m => m.AgreeWithTheRules)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            
            <div class="col-12">

                <div class="form-group d-flex align-items-center justify-content-between">
                    <div>
                    </div>
                    <div>
                        <input type="submit" value="Войти" class="btn btn-dark btn-lg" />
                    </div>
                </div>

                <hr />

                <div class="form-group row">
                    <div class="col-12">
                        @Html.ActionLink("Авторизация", "Login")
                    </div>
                    <div class="col">
                        @Html.ActionLink("Восстановление пароля", "ForgotPassword")
                    </div>
                </div>
            </div>
        }

    </div>
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
