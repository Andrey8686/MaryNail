@using Admin.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutEmptyCenter.cshtml";
    ViewBag.Title = "Административный вход";
}

<div class="mx-4" style="width: 500px;">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-4">@ViewBag.Title</h2>
        </div>
        <div class="col-12">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group row">
                    @Html.LabelFor(m => m.Email, new { @class = "col col-form-label col-form-label-lg" })
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Password, new { @class = "col col-form-label col-form-label-lg" })
                    <div class="col-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex align-items-center justify-content-between">
                    <div>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new {@class = "m-0"})
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Войти" class="btn btn-dark btn-lg" />
                    </div>
                </div>

                <hr />

                <div class="form-group row">
                    <div class="col-12">
                        @Html.ActionLink("Регистрация", "Register")
                    </div>
                    <div class="col">
                        @Html.ActionLink("Восстановление пароля", "ForgotPassword")
                    </div>
                </div>
            }
        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}